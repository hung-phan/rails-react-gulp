{
  "app_name": "Rails with Gulp",
  "development": {
    "src": "./app/assets/source/*-bundle.js",
    "build": "./app/assets/javascripts/build"
  },
  "production": {
    "src": "./app/assets/source/*-bundle.js",
    "build": "./app/assets/javascripts/build"
  },
  "rename": {
    "before": "bundle",
    "after": "build"
  },
  "browserify": {
    "transform": {
      "literalify": {
        "jquery": "window.$",
        "lodash": "window._",
        "react": "window.React"
      }
    }
  }
}
